<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MediaMinistryManager.Mobile.Views.AddCustomerPage"
             Title="Add A New Person">
    
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="FirstName"
                                   Label="First Name:"
                                   Placeholder="First Name"/>
                        <EntryCell x:Name="LastName"
                                   Label="Last Name:"
                                   Placeholder="Last Name"/>
                        <EntryCell x:Name="PhoneNumber"
                                   Label="Phone Number:"
                                   Placeholder="123-456-7890"
                                   Keyboard="Telephone"
                                   Completed="UnfocusedEvent"/>
                        <EntryCell x:Name="Street"
                                   Label="Street:"
                                   Placeholder="Street"/>
                        <EntryCell x:Name="City"
                                   Label="City:"
                                   Placeholder="City"
                                   Keyboard="Text"/>
                        <EntryCell x:Name="State"
                                   Label="State:"
                                   Placeholder="ST"
                                   Keyboard="Text"/>
                        <EntryCell x:Name="ZipCode"
                                   Label="Zip Caode:"
                                   Placeholder="Zip Code"
                                   Keyboard="Numeric"/>
                        <EntryCell x:Name="Email"
                                   Label="E-Mail:"
                                   Placeholder="example@website.com"
                                   Keyboard="Email"/>
                        <EntryCell x:Name="Payment"
                                   Label="Payment Method:"
                                   Placeholder="Cash or Card"
                                   Keyboard="Text"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="AddCustomer"
                        Text="Add"
                        Clicked="AddCustomer_Clicked"
                        FontAttributes="Bold"
                        FontSize="Medium" 
                        HeightRequest="50"/>

                <Button x:Name="Cancel"
                        Text="Cancel"
                        Clicked="Cancel_Clicked"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HeightRequest="50"/>

