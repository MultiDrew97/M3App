                <Entry x:Name="entStock"
                       Text="{Binding in_stock}"
                       Grid.Column="1"
                       Grid.Row="1"/>-->

                
                <!--add the product information items-->
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>