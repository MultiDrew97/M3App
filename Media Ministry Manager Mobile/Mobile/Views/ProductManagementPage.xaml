             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediaMinistryManager.Mobile.Views.ProductManagementPage"
             Title="Product Management">
    <ContentPage.Content>
        <StackLayout>
            <!--<TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="itemName"
